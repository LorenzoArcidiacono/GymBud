<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:layout_marginVertical="4dp"
        android:backgroundTint="@color/orange_trasparent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--            <com.google.android.material.imageview.ShapeableImageView-->
            <!--                android:id="@+id/menu_card_image"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="160dp"-->
            <!--                android:scaleType="centerCrop"-->
            <!--                android:src="@drawable/massimali_image" />-->

            <TextView
                android:id="@+id/menu_card_title"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:shadowColor="@color/yellow_1"
                android:text="Massimali"
                android:layout_margin="4dp"
                android:textColor="@color/primary_dark_red"
                android:textSize="24dp"
                app:layout_constraintBottom_toTopOf="@+id/menu_card_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/menu_card_desc"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="4dp"
                android:shadowColor="@color/yellow_1"
                android:text="informazioni sull'uso"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/menu_card_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_card_title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_card_btn"
                style="@style/Widget.MyApp.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menu_card_desc"
                android:layout_margin="4dp"
                android:text="Vai"
                app:strokeColor="@color/primary_red"
                app:icon="@drawable/ic_baseline_fitness_center_24"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>